{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "ES2020"],
    "outDir": "./dist/tracks",
    "rootDir": "./src",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "include": ["src/tracks/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}

# Server configuration

# Port for serving static pages
STATIC_PORT=50000

# Port for tracker and tracking data
TRACKER_PORT=8888

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017

# MongoDB database name
MONGODB_DB=tracking_service

# MongoDB collection for tracking events
MONGODB_COLLECTION=tracks

# Minimum number of events to buffer before sending
MIN_EVENTS_TO_SEND=3

# Minimum time (in ms) between sending events
MIN_TIME_BETWEEN_SENDS=1000

# CORS origins for tracker app
CORS_ORIGINS=http://localhost:50000,http://127.0.0.1:50000

# Tracker endpoint for client-side tracker
TRACKER_ENDPOINT=http://localhost:8888/track